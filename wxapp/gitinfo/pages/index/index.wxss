.userInfo,.user-r,.follow,.followMain{
    display:flex;
  }
  .userInfo{
    justify-content:center;
    align-items: center;
    font-weight: bold;
    font-size: 15px;
    margin-bottom: 20px;
  }
  .subTitle{
    font-weight: bold;
    font-size: 14px;
  }
  .user-r{
    flex-direction: column;
    margin-left: 10px;
  }
  .avatar{
    width: 100px;
    height: 100px;
    border-radius: 50%;
  }
  
  .followMain{
    justify-content: space-around;
    flex-wrap: wrap;
  }
.follow{
  font-size:12px;
  flex-direction: column;
  align-items: center
}
.foName{
  white-space:nowrap; 
  overflow: hidden;
  text-overflow:ellipsis; 
  width: 60px;
  text-align: center
}
.followImg{
width: 50px;
height: 50px;
border-radius: 50%;
}